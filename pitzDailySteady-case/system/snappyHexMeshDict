castellatedMesh true;
snap            true;
addLayers       true;

geometry
{
    f1wing.stl
    {
        type triSurfaceMesh;
        name wing;
    }
}

castellatedMeshControls
{
    maxLocalCells 1000000;
    maxGlobalCells 2000000;
    minRefinementCells 10;
    nCellsBetweenLevels 3;

    features
    (
        {
            file "f1wing.eMesh";
            level 2;
        }
    );

    refinementSurfaces
    {
        wing
        {
            level (3 5);   // surface min and max refinement
            patchInfo
            {
                type wall;
                inGroups (wingGroup);
            }
        }
    }

    resolveFeatureAngle 30;

    refinementRegions
    {
    }

    locationInMesh (0 0 0);  // MUST be inside fluid domain
}

snapControls
{
    nSmoothPatch 3;
    tolerance 4.0;
    nSolveIter 30;
    nRelaxIter 5;
}

addLayersControls
{
    relativeSizes true;
    layers
    {
        wing
        {
            nSurfaceLayers 3;   // start small, can increase to 10+
        }
    }

    expansionRatio 1.2;
    finalLayerThickness 0.3;
    minThickness 0.1;
    nGrow 0;
}

meshQualityControls
{
    maxNonOrtho 65;
    maxBoundarySkewness 20;
    maxInternalSkewness 4;
    maxConcave 80;
}

